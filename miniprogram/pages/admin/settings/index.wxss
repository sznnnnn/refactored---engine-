.container {
  padding: 24rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

.settings-group {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.group-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 8rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-label {
  flex: 1;
  margin-right: 24rpx;
}

.label-text {
  font-size: 30rpx;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.label-desc {
  font-size: 24rpx;
  color: #999;
}

.picker-value {
  font-size: 28rpx;
  color: #1989fa;
  padding: 8rpx 24rpx;
  background: rgba(25, 137, 250, 0.1);
  border-radius: 6rpx;
}

/* 退出登录按钮 */
.logout-section {
  padding: 48rpx 24rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ff4d4f;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  border: none;
}

.logout-btn:active {
  opacity: 0.9;
}