.container {
  padding: 24rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

/* 顶部栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  position: relative;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 0;
  width: 40%;
  height: 8rpx;
  background: rgba(25, 137, 250, 0.2);
  border-radius: 4rpx;
  z-index: -1;
}

.add-btn {
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #1989fa, #3ba0ff);
  color: #fff;
  border-radius: 8rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.2);
  transition: all 0.3s;
}

.add-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(25, 137, 250, 0.2);
}

/* 状态标签栏 */
.tabs {
  display: flex;
  background: #fff;
  padding: 8rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
  position: relative;
}

.tab-item.active {
  color: #1989fa;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1989fa;
  border-radius: 4rpx;
}

/* 工程师列表 */
.engineer-list {
  height: calc(100vh - 200rpx);
  padding: 0 4rpx;
}

.engineer-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.engineer-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: #1989fa;
  opacity: 0.1;
}

.engineer-item:active {
  transform: scale(0.98);
  background: #fafafa;
}

.engineer-info {
  flex: 1;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.name {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.level {
  font-size: 24rpx;
  color: #1989fa;
  background: rgba(25, 137, 250, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
}

.type {
  font-size: 26rpx;
  color: #666;
  background: #f5f7fa;
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
}

.phone {
  font-size: 26rpx;
  color: #666;
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 6rpx;
  font-weight: 500;
  position: relative;
}

.status-tag::before {
  content: '';
  position: absolute;
  left: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
}

.status-tag.free {
  background: #f6ffed;
  color: #52c41a;
  border: 1rpx solid rgba(82, 196, 26, 0.2);
  padding-left: 24rpx;
}

.status-tag.free::before {
  background: #52c41a;
}

.status-tag.working {
  background: #e6f7ff;
  color: #1989fa;
  border: 1rpx solid rgba(25, 137, 250, 0.2);
  padding-left: 24rpx;
}

.status-tag.working::before {
  background: #1989fa;
}

.status-tag.leave {
  background: #fff7e6;
  color: #fa8c16;
  border: 1rpx solid rgba(250, 140, 22, 0.2);
  padding-left: 24rpx;
}

.status-tag.leave::before {
  background: #fa8c16;
}