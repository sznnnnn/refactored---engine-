/**app.wxss**/
@import './styles/variables.wxss';
@import './styles/fonts.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
} 

/* 全局样式 */
page {
  background: var(--background);
  font-size: 28rpx;
  color: var(--text-main);
  --primary-color: #1989fa;
  --primary-gradient: linear-gradient(135deg, #1989fa, #39bbff);
  --background: #f7f8fa;
  --text-main: #333333;
  --text-secondary: #666666;
  --text-placeholder: #999999;
  --border-color: #ebedf0;
  --card-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --border-radius-sm: 4rpx;
  --border-radius-md: 8rpx;
  --border-radius-lg: 12rpx;
} 

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: var(--border-radius-md);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--card-shadow);
}

/* 通用按钮样式 */
.btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: var(--border-radius-md);
  text-align: center;
}

.btn-primary {
  background: var(--primary-color);
  color: #fff;
}

.btn-outline {
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
  background: #fff;
}

/* 通用标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: var(--border-radius-sm);
  font-size: 24rpx;
}

.tag-primary {
  background: rgba(25, 137, 250, 0.1);
  color: var(--primary-color);
}

.tag-success {
  background: rgba(82, 196, 26, 0.1);
  color: var(--success-color);
}

.tag-warning {
  background: rgba(255, 152, 0, 0.1);
  color: var(--warning-color);
}

/* 通用表单样式 */
.form-item {
  margin-bottom: var(--spacing-md);
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: var(--spacing-xs);
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: var(--background);
  border-radius: var(--border-radius-md);
  padding: 0 var(--spacing-md);
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 通用列表样式 */
.list-item {
  padding: var(--spacing-md);
  background: #fff;
  border-radius: var(--border-radius-md);
  margin-bottom: var(--spacing-sm);
}

.list-item:active {
  opacity: 0.8;
} 