<!--pages/engineer/index.wxml-->
<view class="container">
  <view class="header">
    <view class="engineer-info">
      <text class="name">{{engineer.name}}</text>
      <text class="type">{{engineer.type}} - {{engineer.level}}</text>
    </view>
  </view>

  <view class="content">
    <view class="section">
      <view class="section-title">待处理工单</view>
      <view class="order-list">
        <view class="empty-tip" wx:if="{{!orders || orders.length === 0}}">
          暂无待处理工单
        </view>
        <view class="order-item" 
          wx:for="{{orders}}" 
          wx:key="id"
          bindtap="onOrderClick"
          data-id="{{item.id}}">
          <view class="order-header">
            <text class="order-type">{{item.deviceType}}</text>
            <text class="order-status">{{item.status}}</text>
          </view>
          <view class="order-body">
            <text class="order-desc">{{item.faultDetail}}</text>
          </view>
          <view class="order-footer">
            <text class="order-time">{{item.createTime}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>