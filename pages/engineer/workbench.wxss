.container {
  padding: 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

/* 统计区域样式 */
.stats-section {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-num {
  font-size: 36rpx;
  font-weight: 500;
  color: #1989fa;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 功能区样式 */
.function-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.function-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.function-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.function-desc {
  font-size: 24rpx;
  color: #999;
}

/* 搜索栏样式 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx;
  background: #f7f8fa;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
} 