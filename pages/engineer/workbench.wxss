.container {
  padding: 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

/* 搜索框样式 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx 0;
  background: #f7f8fa;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
}

/* 订单列表样式 */
.order-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-main {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.order-no {
  font-size: 30rpx;
  font-weight: 500;
}

.status {
  font-size: 26rpx;
}

.status.pending {
  color: #ff4d4f;
}

.status.processing {
  color: #1989fa;
}

.status.suspended {
  color: #faad14;
}

.status.completed {
  color: #52c41a;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.label {
  color: #999;
  width: 120rpx;
  flex-shrink: 0;
} 