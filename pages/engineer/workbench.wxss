.container {
  min-height: 100vh;
  background: #ffffff;
  padding: 30rpx;
}

.stats-section {
  display: flex;
  justify-content: space-between;
  background: #ffffff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 36rpx;
  font-weight: 500;
  color: #1989fa;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

.quick-actions {
  display: flex;
  justify-content: space-around;
  background: #ffffff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 26rpx;
  color: #333333;
}

.today-work {
  background: #ffffff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999999;
  padding: 40rpx 0;
}

.work-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.work-time {
  font-size: 26rpx;
  color: #666666;
}

.work-type {
  font-size: 28rpx;
  color: #333333;
}

.work-status {
  font-size: 26rpx;
  color: #1989fa;
}

.work-status.pending {
  color: #ff4d4f;
} 