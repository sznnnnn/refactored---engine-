/* pages/engineer/index.wxss */
.container {
  padding: 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.header {
  background: #1989fa;
  padding: 40rpx 30rpx;
  color: #fff;
}

.engineer-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 500;
}

.type {
  font-size: 28rpx;
  opacity: 0.9;
}

.content {
  padding: 30rpx;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

.order-item {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.order-no {
  font-size: 30rpx;
  font-weight: 500;
}

.status {
  font-size: 26rpx;
}

.status.pending {
  color: #ff4d4f;
}

.status.processing {
  color: #1989fa;
}

.info-row {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.label {
  color: #999;
  width: 100rpx;
  flex-shrink: 0;
}

.order-footer {
  margin-top: 10rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

/* 局部导航样式 */
.nav-bar {
  display: flex;
  background: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.nav-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.nav-item.active {
  color: #1989fa;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #1989fa;
}