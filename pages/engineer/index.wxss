/* pages/engineer/index.wxss */
.container {
  padding: 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
}

.section-count {
  font-size: 26rpx;
  color: #999;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.order-main {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.order-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.order-no {
  font-size: 30rpx;
  font-weight: 500;
}

.appoint-time {
  font-size: 26rpx;
  color: #666;
}

.status {
  font-size: 26rpx;
}

.status.pending {
  color: #ff4d4f;
}

.status.processing {
  color: #1989fa;
}

.info-row {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.label {
  color: #999;
  width: 120rpx;
  flex-shrink: 0;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.action-btn {
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 6rpx;
  background: #1989fa;
  color: #fff;
  line-height: 1.4;
  margin: 0;
}

/* 局部导航样式 */
.nav-bar {
  display: flex;
  background: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.nav-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.nav-item.active {
  color: #1989fa;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #1989fa;
}

.location-wrap {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.copy-btn {
  font-size: 24rpx;
  color: #1989fa;
  padding: 4rpx 16rpx;
  background: rgba(25, 137, 250, 0.1);
  border-radius: 4rpx;
}