.container {
  padding: var(--spacing-sm);
  background: var(--background);
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: var(--spacing-sm);
  background: var(--background);
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--border-radius-md);
  box-shadow: var(--card-shadow);
}

.search-input {
  flex: 1;
  margin-left: var(--spacing-sm);
  font-size: 28rpx;
  color: var(--text-main);
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  padding: var(--spacing-md);
  background: var(--primary-gradient);
  border-radius: var(--border-radius-lg);
  margin-bottom: var(--spacing-md);
  color: #fff;
}

.stats-item {
  text-align: center;
}

.stats-num {
  display: block;
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: var(--spacing-xs);
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 工单列表 */
.section {
  background: #fff;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-main);
}

.section-count {
  font-size: 26rpx;
  color: var(--text-secondary);
  background: var(--background);
  padding: 4rpx 16rpx;
  border-radius: var(--border-radius-sm);
}

.order-item {
  background: var(--background);
  border-radius: var(--border-radius-md);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
}

.order-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.order-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.order-no {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-main);
}

.order-time {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.info-row {
  display: flex;
  margin-bottom: var(--spacing-xs);
  font-size: 26rpx;
}

.label {
  color: var(--text-secondary);
  width: 120rpx;
  flex-shrink: 0;
}

.location-wrap {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.copy-btn {
  font-size: 24rpx;
  color: var(--primary-color);
  background: rgba(25, 137, 250, 0.1);
  padding: 4rpx 16rpx;
  border-radius: var(--border-radius-sm);
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 2rpx solid var(--border-color);
}

.order-actions .btn {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  margin: 0;
}

.header-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.section-icon {
  font-size: 32rpx;
}

/* 今日工单区域 */
.today-section {
  border-left: 8rpx solid var(--primary-color);
}

/* 可抢工单区域 */
.grab-section {
  border-left: 8rpx solid var(--warning-color);
}

.distance {
  font-size: 24rpx;
  color: var(--primary-color);
} 