.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 个人信息卡片 */
.profile-card {
  background: linear-gradient(135deg, #1989fa, #39bbff);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  color: #fff;
}

.profile-header {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-right: 30rpx;
  backdrop-filter: blur(10px);
}

.info {
  flex: 1;
}

.name {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.level-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.level-tag {
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10px);
}

.level-name {
  font-size: 26rpx;
  opacity: 0.9;
}

.phone {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 工作统计卡片 */
.stats-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.stats-more {
  font-size: 26rpx;
  color: #999;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stats-item {
  text-align: center;
}

.stats-num {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #1989fa;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能菜单 */
.menu-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  position: relative;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon {
  font-size: 36rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

.menu-item::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 1rpx;
  background: #f5f5f5;
}

.menu-item:last-child::after {
  display: none;
}

/* 退出按钮 */
.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #ff4d4f;
  font-size: 32rpx;
  text-align: center;
  border-radius: 12rpx;
}

.logout-btn:active {
  opacity: 0.8;
} 