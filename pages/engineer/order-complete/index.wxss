.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.model-no-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.model-input, .no-input {
  flex: 1;
}

.separator {
  color: #999;
  font-size: 28rpx;
}

.engineers-text, .info-text {
  font-size: 28rpx;
  color: #333;
  padding: 20rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
}

.photo-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.photo-list image {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 8rpx;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #1989fa;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
  margin: 0;
}

.required::after {
  content: ' *';
  color: #ff4d4f;
}

.refresh-btn {
  color: #1989fa;
  font-size: 26rpx;
}

.location-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
} 