.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.orders-list {
  width: 100%;
}

.order-item {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-number {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.status.pending {
  background: #fff7e6;
  color: #ff9800;
}

.status.processing {
  background: #e6f7ff;
  color: #1989fa;
}

.status.completed {
  background: #f6ffed;
  color: #52c41a;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
} 