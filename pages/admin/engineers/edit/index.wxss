.container {
  padding: var(--spacing-sm);
  background: var(--background);
  min-height: 100vh;
}

.form-group {
  background: #fff;
  border-radius: var(--border-radius-md);
  padding: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
  box-shadow: var(--card-shadow);
}

.label {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: var(--spacing-xs);
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 var(--spacing-sm);
  background: var(--background);
  border: none;
  border-radius: var(--border-radius-sm);
  font-size: 28rpx;
  box-sizing: border-box;
  color: var(--text-main);
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: var(--spacing-sm);
  background: var(--background);
  border: none;
  border-radius: var(--border-radius-sm);
  font-size: 28rpx;
  box-sizing: border-box;
  color: var(--text-main);
}

.submit-btn {
  margin-top: var(--spacing-lg);
  background: var(--primary-color);
  border-radius: var(--border-radius-sm);
  font-size: 32rpx;
  font-weight: 500;
}

.submit-btn::after {
  border: none;
}

.status-group {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.status-group .label {
  margin-bottom: 0;
  flex-shrink: 0;
}

.status {
  font-size: 26rpx;
  padding: 4rpx var(--spacing-xs);
  border-radius: var(--border-radius-sm);
  margin-right: auto;
}

.status.active {
  background: #f0f9eb;
  color: var(--success-color);
}

.status.disabled {
  background: var(--background);
  color: var(--text-placeholder);
}

.status-btn {
  margin: 0;
  padding: 0 var(--spacing-md);
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  border-radius: var(--border-radius-sm);
}

.status-btn.primary {
  background: var(--primary-color);
  color: #fff;
}

.status-btn.danger {
  background: var(--error-color);
  color: #fff;
}

.status-btn::after {
  border: none;
} 