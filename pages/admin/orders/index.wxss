/* pages/admin/orders/index.wxss */
.container {
  padding: 20rpx;
}

.orders-list {
  width: 100%;
}

.order-item {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-number {
  font-size: 28rpx;
  color: #333;
}

.order-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.order-status.pending {
  background: #fef0f0;
  color: #f56c6c;
}

.order-status.processing {
  background: #e1f3d8;
  color: #67c23a;
}

.order-status.completed {
  background: #f0f9eb;
  color: #67c23a;
}

.order-content {
  font-size: 26rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.order-description {
  color: #333;
}

.loading, .no-more, .empty {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 26rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.import-btn {
  padding: 10rpx 30rpx;
  background: #1989fa;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}