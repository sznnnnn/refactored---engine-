<!--pages/admin/orders/index.wxml-->
<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <view class="search-box">
      <icon type="search" size="16" color="#999"/>
      <input 
        class="search-input"
        placeholder="搜索工单号/客户" 
        value="{{keyword}}"
        bindinput="onSearchInput"
        bindconfirm="onSearch"
      />
    </view>
    <view class="import-btn" bindtap="importWorkOrders">导入</view>
  </view>

  <!-- 状态统计 -->
  <view class="stats-bar">
    <view class="stat-item {{status === 'all' ? 'active' : ''}}" 
          bindtap="switchStatus" data-status="all">
      全部({{stats.total}})
    </view>
    <view class="stat-item {{status === 'pending' ? 'active' : ''}}" 
          bindtap="switchStatus" data-status="pending">
      待处理({{stats.pending}})
    </view>
    <view class="stat-item {{status === 'processing' ? 'active' : ''}}" 
          bindtap="switchStatus" data-status="processing">
      处理中({{stats.processing}})
    </view>
    <view class="stat-item {{status === 'completed' ? 'active' : ''}}" 
          bindtap="switchStatus" data-status="completed">
      已完成({{stats.completed}})
    </view>
  </view>

  <!-- 工单列表 -->
  <view class="orders-list">
    <view class="order-item" wx:for="{{filteredOrders}}" wx:key="id">
      <view class="order-header">
        <text class="order-number">工单号：{{item.orderNumber}}</text>
        <text class="order-status {{item.status}}">{{item.statusText}}</text>
      </view>
      <view class="order-content">
        <view class="order-info">
          <text>客户：{{item.customerName}}</text>
          <text>创建时间：{{item.createTime}}</text>
        </view>
        <view class="order-description">
          <text>问题描述：{{item.description}}</text>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 加载状态 -->
  <view class="loading" wx:if="{{loading}}">加载中...</view>
  <view class="no-more" wx:if="{{!hasMore && filteredOrders.length > 0}}">没有更多数据了</view>
  <view class="empty" wx:if="{{!loading && filteredOrders.length === 0}}">暂无工单数据</view>
</view>