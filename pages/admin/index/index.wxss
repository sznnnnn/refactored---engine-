/* pages/admin/index/index.wxss */
.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

/* 顶部信息 */
.header {
  background: var(--primary-gradient);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  color: #fff;
  margin-bottom: var(--spacing-md);
}

.company-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
}

.company-name {
  font-size: 32rpx;
  font-weight: bold;
}

.admin-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.welcome {
  font-size: 28rpx;
  opacity: 0.9;
}

.name {
  font-size: 28rpx;
  font-weight: 500;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background: #fff;
  padding: 30rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.stats-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stats-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 50%;
  width: 1rpx;
  background: #eee;
}

.stats-num {
  display: block;
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能菜单 */
.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.menu-item {
  background: #fff;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md);
  text-align: center;
  box-shadow: var(--card-shadow);
}

.menu-icon {
  font-size: 48rpx;
  margin-bottom: var(--spacing-xs);
}

.menu-text {
  font-size: 28rpx;
  color: var(--text-main);
}

/* 最新工单 */
.section {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.view-all {
  font-size: 24rpx;
  color: #1989fa;
}

/* 工单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.order-item {
  background: #f8f8f8;
  padding: 16rpx;
  border-radius: 8rpx;
}

.order-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.order-no {
  font-size: 28rpx;
  color: #333;
}

.status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status.pending {
  background: #fff7e6;
  color: #ff9800;
}

.status.processing {
  background: #e6f7ff;
  color: #1989fa;
}

.status.completed {
  background: #f6ffed;
  color: #52c41a;
}

.order-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.customer {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.company-logo {
  font-size: 80rpx;
  line-height: 1;
}

.logo-text {
  font-size: 80rpx;
  line-height: 1;
}