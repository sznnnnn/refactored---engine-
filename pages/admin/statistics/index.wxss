/* pages/admin/statistics/index.wxss */
.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

/* 标签页 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1989fa;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1989fa;
  border-radius: 2rpx;
}

/* 概览卡片 */
.overview-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.card {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  text-align: center;
}

.card-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.card-value {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

/* 统计区块 */
.section {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

/* 状态分布 */
.status-distribution {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-bar {
  height: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  overflow: hidden;
}

.status-bar-inner {
  height: 100%;
  transition: width 0.3s ease;
}

.status-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

/* 时段分布 */
.time-distribution {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 300rpx;
  padding: 20rpx 0;
}

.time-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.time-bar {
  width: 40rpx;
  background: #1989fa;
  border-radius: 4rpx 4rpx 0 0;
  transition: height 0.3s ease;
}

.time-label {
  font-size: 20rpx;
  color: #666;
  transform: rotate(-45deg);
  transform-origin: right top;
  width: 100rpx;
  text-align: right;
}

.time-value {
  font-size: 20rpx;
  color: #333;
}

/* 趋势图 */
.trend-chart {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 300rpx;
  padding: 20rpx 0;
}

.trend-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.trend-bar {
  width: 40rpx;
  background: #1989fa;
  border-radius: 4rpx 4rpx 0 0;
  transition: height 0.3s ease;
}

.trend-date {
  font-size: 20rpx;
  color: #666;
}

.trend-count {
  font-size: 20rpx;
  color: #333;
}

/* 工程师排行 */
.engineer-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.engineer-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.rank {
  width: 40rpx;
  height: 40rpx;
  background: #1989fa;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.engineer-info {
  flex: 1;
}

.engineer-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.engineer-stats {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #666;
}