/* pages/login/login.wxss */
.login-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.login-content {
  width: 80%;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
}

.login-header {
  padding: 15px;
  text-align: center;
  position: relative;
  border-bottom: 1px solid #eee;
}

.close {
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20px;
  color: #999;
}

.login-body {
  padding: 20px;
}

.input-group {
  margin-bottom: 15px;
}

.input-group text {
  display: block;
  margin-bottom: 5px;
  color: #333;
}

.input-group input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  box-sizing: border-box;
}

.login-footer {
  padding: 15px;
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #eee;
}

.btn-cancel, .btn-submit {
  width: 45%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 4px;
  margin: 0;
  padding: 0;
  font-size: 16px;
  border: none;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-submit {
  background: #07c160;
  color: #fff;
}

/* 按钮点击效果 */
.btn-submit:active {
  opacity: 0.8;
}

.btn-hover {
  opacity: 0.8;
}

.btn-test {
  margin-bottom: 20px;
  width: 100%;
  height: 44px;
  line-height: 44px;
  background: #1989fa;
  color: #fff;
  border-radius: 4px;
  font-size: 16px;
  text-align: center;
}