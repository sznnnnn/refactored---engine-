/* pages/login/login.wxss */
.container {
  padding: var(--spacing-lg);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: var(--background);
}

.login-header {
  text-align: center;
  margin: 100rpx 0;
}

.logo {
  font-size: 120rpx;
  margin-bottom: var(--spacing-md);
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: var(--spacing-xs);
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.login-form {
  width: 100%;
  background: #fff;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
  box-shadow: var(--card-shadow);
}

.form-item {
  margin-bottom: var(--spacing-md);
}

.label {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  margin-bottom: var(--spacing-xs);
}

.input {
  width: 100%;
  height: 88rpx;
  background: var(--background);
  border-radius: var(--border-radius-md);
  padding: 0 var(--spacing-md);
  font-size: 28rpx;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: var(--border-radius-lg);
  margin-top: var(--spacing-lg);
}

.login-btn:active {
  opacity: 0.9;
}

.footer {
  margin-top: auto;
  text-align: center;
}

.copyright {
  font-size: 24rpx;
  color: var(--text-secondary);
  opacity: 0.8;
}